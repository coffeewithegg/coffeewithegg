{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DEV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"]
    },
    "deploy": {
      "dependsOn": ["^deploy"],
      "outputs": [
        ".sst/**",
        ".vercel/**",
        ".netlify/**",
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ],
      "env": [
        "SST_STAGE",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST"
      ],
      "cache": false
    },
    "teardown": {
      "dependsOn": ["^teardown"],
      "env": ["SST_STAGE"],
      "cache": false
    }
  }
}
